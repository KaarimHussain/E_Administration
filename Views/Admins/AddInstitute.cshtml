<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row">
        <div class="col-12 mb-3">
            <a asp-action="Index" class="text-black text-decoration-none">Go Back</a>
        </div>
        <div class="col-12 d-flex justify-content-center flex-column gap-2">
            <div>
                <h1 class="fw-bold font-body display-4">Add Institute</h1>
                <p class="text-black-50">Fill the Information about the Institute in the given fields</p>
            </div>
            <form asp-action="AddInstitute" method="post" class="col-12">
                <div class="form-group my-2 d-flex flex-column">
                    <label>Institute Name</label>
                    <input type="text" name="InstituteName" placeholder="Name of the Institute..." class="input-custom" />
                </div>
                <div class="form-group my-2 d-flex flex-column">
                    <label>Institute Description</label>
                    <textarea cols="4" name="InstituteDescription" placeholder="Description of the Institute..." class="input-custom"></textarea>
                </div>
                <div class="form-group my-2 d-flex flex-column">
                    <label>Institute Address</label>
                    <input type="text" name="InstituteAddress" placeholder="Address of the Institute..." class="input-custom" />
                </div>
                <div class="my-3">
                    <button type="submit" class="secondary-btn col-12">Add Institute</button>
                </div>
            </form>
        </div>
    </div>
</div>
