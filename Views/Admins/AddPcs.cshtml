@{
    ViewData["Title"] = "Add PC | Portal - X - Administrator | Online Administration Manager";
}
<div class="container py-5">
    <div class="row">
        <div class="col-12 my-3">
            <a class="text-black text-decoration-none" asp-action="ViewPcs" asp-route-id="@ViewBag.InstituteId">Go Back </a>
        </div>
        <div class="col-12 d-flex justify-content-center align-items-center">
            <div class="row">
                <div class="col-md-12 d-flex flex-column gap-1">
                    <h1 class="font-body fw-bold display-3">Add PC</h1>
                    <p>you can use hardware parts to build PC</p>
                    <div class="col-12 my-3">
                        @if (TempData["PcError"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["PcError"]
                            </div>
                        }
                        @if (TempData["PcSuccess"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["PcSuccess"]
                            </div>
                        }
                    </div>
                    <form method="post" asp-action="AddPcs" class="d-flex flex-column gap-3">
                        <div class="d-flex flex-column gap-1">
                            <label class="text-black">
                                PC Name
                            </label>
                            <input type="text" required class="input-custom" name="PcName" placeholder="PC Name..." />
                        </div>
                        <div class="d-flex flex-column gap-1">
                            <label class="text-black">
                                Hardware Component
                            </label>
                            <select name="HardId" asp-items="ViewBag.availableHardware" class="input-custom"></select>
                        </div>
                         <div class="d-flex flex-column gap-1">
                            <label class="text-black">
                                Available Labs
                            </label>
                            <select name="LabId" asp-items="ViewBag.availableLabs" class="input-custom"></select>
                        </div>
                        <input type="hidden" name="id" value="@ViewBag.InstituteId" />
                        <button type="submit" class="primary-btn text-center">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
