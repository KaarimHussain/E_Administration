@model IEnumerable<E_Administration.Models.Role>
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can manipulate almost anything</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="col-12 mb-3 mt-3">
                        <h1 class="text-center font-body display-4 fw-bold">Available Roles</h1>
                    </div>
                    <div class="col-12 my-4">
                        <a asp-action="AddRoles" class="primary-btn"><i class="bi bi-plus-lg"></i> Add Roles</a>
                    </div>
                    <!-- Roles View -->
                    <div class="col-12">
                        <div class="row">
                            @foreach (var roleData in Model)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="primary-bg rounded-5 p-4 d-flex justify-content-lg-between justify-content-md-center justify-content-center flex-lg-row flex-md-column flex-column align-items-center">
                                        <div>
                                            <small class="fw-normal text-white">Role Name</small>
                                            <h1 class="fw-bold font-body text-white">@roleData.RoleName</h1>
                                        </div>
                                        <div class="d-flex flex-md-column flex-row gap-2">
                                            <form asp-action="deleteRole" method="post">
                                                <input type="hidden" name="roleID" value="@roleData.RoleId" />
                                                <button type="submit" class="badge text-white bg-danger rounded-circle cursor-pointer">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </form>
                                            <form asp-action="EditRole" method="post">
                                                <input type="hidden" name="roleID" value="@roleData.RoleId" />
                                                <button type="submit" class="badge text-dark rounded-circle bg-white cursor-pointer">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!--  -->
                </div>
            </div>
        </div>
    </div>
</div>

