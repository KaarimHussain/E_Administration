@model IEnumerable<E_Administration.Models.Course>
@{
    ViewData["Title"] = "Courses";
}
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can manipulate almost anything</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <!-- Course View -->
                    <div class="container my-4">
                        <div class="row">
                            <div class="col-12 mb-3" >
                                <a asp-action="DetailInstitutes" asp-route-id="@ViewBag.InstituteId" class="text-decoration-none text-black-50"><i class="bi bi-arrow-left"></i> Back to List</a>
                            </div>
                            <div class="col-12 mb-4">
                                <h1 class="display-4 fw-bold font-body text-center text-black">
                                    Courses
                                </h1>
                            </div>
                            <div class="col-12 mb-4">
                                <a class="primary-btn" asp-action="AddCourse" asp-route-id="@ViewBag.InstituteId">Add Course</a>
                            </div>
                            <div class="col-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Course ID</th>
                                            <th scope="col">Course Name</th>
                                            <th scope="col">Created By</th>
                                            <th scope="col">Course Duration</th>
                                            <th scope="col">Created At</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var course in Model)
                                        {
                                            <tr>
                                                <td>@course.CourseId</td>
                                                <td>@course.CourseName</td>
                                                <td>@course.CreatedBy</td>
                                                <td>@course.CourseDuration</td>
                                                <td>@course.CreatedAt</td>
                                                <td class="d-flex gap-2">
                                                    <form asp-action="DeleteCourse" asp-route-id="@ViewBag.InstituteId" method="post">
                                                        <input type="hidden" name="CourseId" value="@course.CourseId" />
                                                        <button type="submit" class="primary-icon-btn">
                                                            <i class="bi bi-trash-fill"></i>
                                                        </button>
                                                    </form>
                                                    <a asp-action="EditCourse" asp-route-id="@ViewBag.InstituteId" asp-route-CourseId="@course.CourseId" class="primary-icon-btn">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                </div>
            </div>
        </div>
    </div>
</div>

