@model IEnumerable<E_Administration.Models.HodInstitute>

<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the Institute</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <a asp-action="DetailInstitutes" asp-route-id="@ViewBag.InstituteId" class="text-decoration-none text-black-50"><i class="bi bi-arrow-left"></i> Back to List </a>
                    <div class="col-12 my-2 d-flex justify-content-start" >
                        <a class="primary-btn text-center" asp-action="AddHOD" asp-route-instituteId="@ViewBag.InstituteId">
                            Add HOD
                        </a>
                    </div>
                    <!-- Institute Details View -->
                    <div class="container my-3">
                        @if (Model == null || !Model.Any())
                        {
                            <p class="text-center fs-3 text-black-50 fw-bold" >No HOD are assign in this Institute</p>
                        }
                        else
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Email Address</th>
                                        <th scope="col">Department Name</th>
                                        <th scope="col">Created At</th>
                                        <th scope="col" class="text-center" >Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hod in Model)
                                    {
                                        <tr>
                                            <th scope="row">@hod.HodId</th>
                                            <td>@hod.User.Username</td>
                                            <td>@hod.User.Email</td>
                                            <td>@hod.Department.DepartmentName</td>
                                            <td>@hod.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td class="d-flex justify-content-center gap-2">
                                                <a class="primary-icon-btn" asp-action=""><i class="bi bi-pencil-square"></i></a>
                                                <a class="primary-icon-btn" asp-action=""><i class="bi bi-trash-fill"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>
