@model IEnumerable<E_Administration.Models.Lab>
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the Institute</p>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <a asp-action="DetailInstitutes" asp-route-id="@ViewBag.InstituteId" class="text-decoration-none text-black-50"><i class="bi bi-arrow-left"></i> Back to List</a>
                    <!-- Institute Details View -->
                    <div class="container my-3">
                        <div class="row">
                            <div class="col-12 my-2">
                                <a asp-action="AddLabs" asp-route-id="@ViewBag.InstituteId" class="primary-btn">Add Labs</a>
                            </div>
                            <div class="col-12 d-flex justify-content-center">
                                <div class="col-md-6 col-sm-12 col-12 d-flex flex-column gap-2 align-items-center">
                                    <h1 class="text-center fw-bold font-body display-3">Labs</h1>
                                </div>
                            </div>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Lab</th>
                                        <th scope="col" class="text-center">Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1; // Initialize the index counter
                                    }
                                    @foreach (var labs in Model)
                                    {
                                        <tr>
                                            <th>@index</th> <!-- Display the index -->
                                            <td>@labs.LabId</td>
                                            <td class="py-3 d-flex justify-content-center">
                                                <a asp-action="ViewLabsDetails" asp-route-labId="@labs.LabId" asp-route-id="@ViewBag.InstituteId" class="primary-btn">  
                                                    View PC's
                                                </a>
                                            </td>
                                        </tr>
                                        index++; // Increment the counter
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>