@model IEnumerable<E_Administration.Models.Pc>
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the Institute</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <a asp-action="ViewLabs" asp-route-id="@ViewBag.InstituteId" class="text-decoration-none text-black-50"><i class="bi bi-arrow-left"></i> Back to List</a>
                    <h1 class="fw-bold text-center font-body text-black">Lab Details</h1>
                    <p class="text-center text-black-50 font-body">All the PC's Lab </p>
                    <!-- Institute Details View -->
                    <div class="container my-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">PC #</th>
                                    <th scope="col">PC Name</th>
                                    <th scope="col">Processor</th>
                                    <th scope="col">RAM</th>
                                    <th scope="col">Storage</th>
                                    <th scope="col">Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var pcs in Model)
                                    {
                                        <tr>
                                            <th>
                                                @pcs.PcId
                                            </th>
                                            <td>
                                                @pcs.PcName
                                            </td>
                                            <td>
                                                @pcs.Hard.Processor
                                            </td>
                                            <td>
                                                @pcs.Hard.Ram GB
                                            </td>
                                            <td>
                                                @pcs.Hard.StorageCapacity GB
                                            </td>
                                            <td>
                                                <a class="primary-icon-btn" asp-action="ViewPCDetails" asp-route-id="@ViewBag.InstituteId" asp-route-pcId="@pcs.PcId" asp-route-labId="@ViewBag.LabId" >
                                                    <i class="bi bi-info-circle-fill" ></i>
                                               </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            No PC Found in this Lab
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>
