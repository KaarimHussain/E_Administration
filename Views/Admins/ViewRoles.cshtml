@model IEnumerable<E_Administration.Models.Role>
@{
    ViewData["Title"] = "Roles | Portal - X - Administration";
}
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the Institute</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <a asp-action="DetailInstitutes" asp-route-id="@ViewBag.InstituteId" class="text-decoration-none text-black-50"><i class="bi bi-arrow-left"></i> Back to List</a>
                    <!-- Institute Details View -->
                    <div class="container my-3">
                        <div class="col-12 mb-3 mt-3">
                            <h1 class="text-center font-body display-4 fw-bold">Available Roles @Model.Count()</h1>
                        </div>
                        <div class="col-12 my-4">
                            <a asp-action="AddRoles" asp-route-instituteId="@ViewBag.InstituteId" class="primary-btn"><i class="bi bi-plus-lg"></i> Add Roles</a>
                        </div>
                        <!-- Roles View -->
                        <div class="col-12">
                            <div class="row">
                                @foreach (var roleData in Model)
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                        <div class="primary-bg rounded-5 p-4 d-flex justify-content-lg-between justify-content-md-center justify-content-center flex-lg-row flex-md-column flex-column align-items-center">
                                            <div>
                                                <small class="fw-normal text-white">Role Name</small>
                                                <h1 class="fw-bold font-body text-white">@roleData.RoleName</h1>
                                            </div>
                                            <div class="d-flex flex-md-column flex-row gap-2">
                                                <form asp-action="DeleteRole" method="post">
                                                    <input type="hidden" name="roleID" value="@roleData.RoleId" />
                                                    <button type="submit" class="btn btn-danger rounded-circle cursor-pointer">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="EditRole" method="post">
                                                    <input type="hidden" name="roleID" value="@roleData.RoleId" />
                                                    <input type="hidden" name="instituteId" value="@ViewBag.InstituteId" />
                                                    <button type="submit" class="btn btn-light text-dark rounded-circle cursor-pointer">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>
