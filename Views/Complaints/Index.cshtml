@model IEnumerable<E_Administration.Models.Complaint>

@{
    ViewData["Title"] = "Complaints | Portal - X - Administration";
}
<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the Institute</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="container py-3">
                        <h1 class="text-center fw-bold font-body text-black display-3 mb-3">Complaints</h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Complaints Responses
                                    </th>
                                    <th>
                                        From
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ComplaintsResponse)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Id)
                                            </td>
                                            <td>
                                                <a asp-action="Details" class="primary-icon-btn" asp-route-id="@item.ComplaintsId">
                                                    <i class="bi bi-info"></i>
                                                </a> |
                                                <a asp-action="Delete" asp-route-id="@item.ComplaintsId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="text-center">
                                        <td colspan="3">
                                            No Complaints Found
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
