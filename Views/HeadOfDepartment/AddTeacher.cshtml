@model IEnumerable<E_Administration.Models.User>
@{
    ViewData["Title"] = "Add Teacher (Head of Department)";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 my-3">
            <a class="text-black text-decoration-none" asp-action="ViewTeacher" asp-route-id="@ViewBag.HodId">Go Back</a>
        </div>
        <div class="col-12 d-flex justify-content-center align-items-center">
            <div class="row">
                <div class="col-md-12 d-flex flex-column gap-1">
                    <h1 class="font-body fw-bold display-3">Assign Teachers</h1>
                    <p>Assigning Teacher a Course to work on</p>
                    
                    @if (TempData["HODSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["HODSuccess"]
                        </div>
                    }
                    @if (TempData["HODError"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["HODError"]
                        </div>
                    }

                    <form method="post" asp-action="AddTeacher" class="d-flex flex-column gap-3">
                        <input type="hidden" name="hodId" value="@ViewBag.hodId" />
                        
                        <div class="form-group">
                            <label for="TeacherId">Select Unassigned Teachers</label>
                            <select asp-items="ViewBag.Teachers" required id="TeacherId" name="TeacherId" class="input-custom w-100"></select>
                        </div>

                        <div class="form-group">
                            <label for="CourseId">Select Course</label>
                            <select asp-items="ViewBag.Course" required id="CourseId" name="CourseId" class="input-custom w-100"></select>
                        </div>

                        <button type="submit" class="primary-btn text-center">Assign Course</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
