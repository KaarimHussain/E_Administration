@model IEnumerable<E_Administration.Models.Course>
<div class="container-fluid position-relative">
    <div class="row">
        <!-- HOD Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_HodSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Head Of Department!🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the HOD of the Education Department</p>
                            </div>
                             <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />

                    <!-- Users View -->
                    <div class="col-12">
                       
                        @{
                            ViewData["Title"] = "Courses | Portal - X - Administration";
                        }

                        <h1 class="text-center fw-bold font-body">Courses</h1>

                        <div class="col-12 my-3">
                            <a asp-action="Create" class="primary-btn">Add Course</a>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CourseName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CourseDuration)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedBy)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th scope="col" class="text-center" >Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseDuration)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedBy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        <td class="d-flex justify-content">
                                            <a class="primary-icon-btn" asp-action="Edit" asp-route-id="@item.CourseId"><i class="bi bi-pencil-square"></i></a> 
                                            <a class="primary-icon-btn" asp-action="Delete" asp-route-id="@item.CourseId"><i class="bi bi-trash-fill"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!--  -->





                </div>
            </div>
        </div>
    </div>
</div>

