@model IEnumerable<E_Administration.Models.Course>
@{
    ViewData["Title"] = "Teachers Panel | Portal - X - Administration";
}
<div class="container-fluid position-relative">
    <div class="row">
        <!-- HOD Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_HodSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, @User.Identity.Name!🤔</h3>
                                <p class="text-black-50 fw-normal">You are HOD (Head of Department)! Soo Let's see what you can do over here</p>
                            </div>
                             <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />

                    <!-- Users View -->
                    <div class="col-12">
                        <div class="container py-5">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="ViewTeacher" class="text-decoration-none fw-bold text-white fs-1">
                                            Teachers
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="ViewLabs" class="text-decoration-none fw-bold text-white fs-1">
                                            Labs
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="ViewSystem" asp-controller="HeadOfDepartment" class="text-decoration-none fw-bold text-white fs-1">
                                            Systems
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="ViewCourses" class="text-decoration-none fw-bold text-white fs-1">
                                            Courses
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="ViewDepartment" asp-controller="HeadOfDepartment" class="text-decoration-none fw-bold text-white fs-1">
                                            Department
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                    <div class="rounded-5 primary-bg p-3 text-center">
                                        <a asp-action="IndexSchedule" class="text-decoration-none fw-bold text-white fs-1">
                                            Schedule
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                </div>
            </div>
        </div>
    </div>
</div>

