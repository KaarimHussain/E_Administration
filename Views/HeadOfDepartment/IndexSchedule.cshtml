@model IEnumerable<E_Administration.Models.Schedule>

<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_HodSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Head Of Department!🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the HOD of the Education Department</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <br />
                    <br />
                    <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                        <div class="shadow w-100 py-3 px-5 rounded-4 text-center primary-bg">
                            <a asp-action="DaySchedule" asp-route-instituteId="@ViewBag.hodId" asp-route-id="" class="text-decoration-none font-body fs-3 text-white fw-bold">
                                Day Schedule
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                        <div class="shadow w-100 py-3 px-5 rounded-4 text-center primary-bg">
                            <a asp-action="ViewSchedule" asp-route-instituteId="" asp-route-id="" class="text-decoration-none font-body fs-3 text-white fw-bold">
                                Time Schedule
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

