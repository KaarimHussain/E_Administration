@model IEnumerable<E_Administration.Models.HodCourseAssignTeacher>

<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_HodSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Head Of Department!🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can view the details about the HOD of the Education Department</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["HODSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["HODSuccess"]
                        </div>
                    }
                    @if (TempData["HODError"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["HODError"]
                        </div>
                    }
                    <div class="col-12 my-2 d-flex gap-2 justify-content-start">
                        <a class="text-black-50 text-decoration-none" asp-action="ViewTeacher">
                            Go Back
                        </a>
                    </div>
                    <!-- Teachers View -->
                    <div class="container my-3">
                        @if (Model == null || !Model.Any())
                        {
                            <p class="text-center fs-3 text-black-50 fw-bold">No UnAssign Users Found</p>
                        }
                        else
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Email Address</th>
                                        <th scope="col">Course Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <th scope="col">@user.AssignId</th>
                                            <td>@user.AssignToNavigation?.Username</td>
                                            <td>@user.AssignToNavigation?.Email</td>
                                            <td>@user.Course?.CourseName</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>
