@model E_Administration.Models.File

@{
    ViewData["Title"] = "Details";
}

<div class="container py-5">
    <div class="row mt-5">
        <div class="col-12 my-3">
            <h1 class="fw-bold text-center font-body display-3 text-black">File Details</h1>
        </div>
        <div class="col-12 my-4 text-center d-flex flex-column gap-1 mb-2">
            <span class="fw-bold text-black">
                File Name
            </span>
            <small class="text-black-50 text-center fw-semibold">
                @Html.DisplayFor(Model => Model.FileName)
            </small>
        </div>
        <div class="col-12 my-4 text-center d-flex flex-column gap-1 mb-2">
            <span class="fw-bold text-black">
                Category
            </span>
            <small class="text-black-50 text-center fw-semibold">
                @Html.DisplayFor(Model => Model.Category)
            </small>
        </div>
        <div class="col-12 my-4 text-center d-flex flex-column gap-1 mb-2">
            <span class="fw-bold text-black">
                Uploaded At
            </span>
            <small class="text-black-50 text-center fw-semibold">
                @Html.DisplayFor(Model => Model.UploadDate)
            </small>
        </div>
        <div class="col-12 my-4 text-center d-flex flex-column gap-1 mb-2">
            <span class="fw-bold text-black">
                Uploaded By
            </span>
            <small class="text-black-50 text-center fw-semibold">
                @Html.DisplayFor(Model => Model.UploadedBy)
            </small>
        </div>
        <div class="d-flex flex-row gap-2 flex-ld-row flex-md-column align-items-center" >
            <a asp-action="Download" asp-route-id="@Model.FileId" class="primary-btn">Download</a>
            <a asp-action="Index" class="secondary-btn">Back to List</a>
        </div>
    </div>
</div>










