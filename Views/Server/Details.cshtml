@model E_Administration.Models.File

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5" style="padding-top:50px;">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">File Details</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-3 fw-bold">File Name:</label>
                    <div class="col-sm-9">
                        <p>@Html.DisplayFor(model => model.FileName)</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 fw-bold">Category:</label>
                    <div class="col-sm-9">
                        <p>@Html.DisplayFor(model => model.Category)</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 fw-bold">Upload Date:</label>
                    <div class="col-sm-9">
                        <p>@Html.DisplayFor(model => model.UploadDate)</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 fw-bold">Uploaded By:</label>
                    <div class="col-sm-9">
                        <p>@Html.DisplayFor(model => model.UploadedBy)</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a class="btn btn-success" asp-action="Download" asp-route-id="@Model.FileId">Download</a>
                <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model.FileId">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
